        // "--max-line-length",//how long to be each line our code,well know we limited our code length each line when formatting code using black
        // "88",//length each line
    // ],


    //!Common Python
    "[python]":{
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        }
    }
}